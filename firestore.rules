rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anonymous users to create maintenance tickets
    match /maintenance_tickets/{ticketId} {
      allow read, write: if true;
    }

    // Allow anonymous users to create scheduled tasks
    match /scheduled_tasks/{taskId} {
      allow read, write: if true;
    }

    // Users collection - authenticated users can create/read their own documents
    match /users/{userId} {
      // Anyone can create a user document (for registration)
      allow create: if true;
      // Authenticated users can read all users (for admin panel)
      allow read: if request.auth != null;
      // Users can update their own documents, admins can update any
      allow update, delete: if request.auth != null &&
        (request.auth.uid == userId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Allow access to Firebase Storage for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
